<p>コメント件数：<%= @book.book_comments.count %></p>
<% @book.book_comments.each do |book_comment| %>
  <p><%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %></p>
  <%= book_comment.user.name %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
  <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
  <% end %>
<% end %>