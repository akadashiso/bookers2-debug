<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <th>follows</th>
      	<th><%= link_to @user.followings.count, followings_user_path(@user.id) %>
        <th>followers</th>
      	<th><%= link_to @user.followers.count, followers_user_path(@user.id) %></th>
        <td>
            <%= render 'relationships/follow_form', user: user %>
        </td>
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
